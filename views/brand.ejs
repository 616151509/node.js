<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link rel="stylesheet" href="/css/commen.css">
    <link rel="stylesheet" href="/css/project.css">
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
</head>

<body>
    <%- include('./commen/head') %>
    <div class="menu">
        <%- include('./commen/menu') %>
        <div class="menu-right">
            <div class="cicleHead">
                <div class="cicle menu-form">
                    新增品牌
                </div>
            </div>
            <table class="table table-striped table-bordered table-hover menu-table">
                <thead>
                    <tr>
                        <th>序号</th>
                        <th>品牌LOGO</th>
                        <th>品牌名称</th>
                    </tr>
                </thead>
                <tbody>
                    
                    <% for(var i = 0; i < list.length; i++) {%>
                        <tr>
                                <th scope="row"><%= i+1 %></th>
                                <td>
                                    <img class="likeSmall" src="/<%= list[i].fileName %>" alt="">
                                </td>
                                <td><%= list[i].logo %></td>
                                <td>
                                    <a href="#" class="cicle">修改</a>
                                    <a class="cicle" href="/brand/delet?id=<%= list[i]._id %>">删除</a>
                                </td>
                        </tr>
                    <%}%>
                </tbody>
            </table>
            <form class="addList" method="post" action="/brand/brandAdd" enctype="multipart/form-data">
                <h1>新增</h1>
                <label>
                    图片: <input type="file" name="file" id="img">
                </label>
                <label>
                    所属品牌: <input type="text" id="logo" name="logo">
                </label>
                <label>
                    <button class="addNew">添加</button>
                </label>
                <a class="cancel cicle">取消</a>
             </form>
             <nav class="menu-nav">
                <ul class="pagination menunav-li">
                    <li>
                        <a href="/brand?page=<%= currentPage - 1 < 1 ? 1: currentPage - 1 %>&pageSize=<%= pageSize %>" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <% for (var i=0;i<totalPage;i++) {%>
                        <li class="<%= currentPage === (i+1) ? 'active': '' %>"><a href="/brand?page=<%= i+1 %>&pageSize=<%= pageSize %>"><%= i + 1%></a></li>
                    <%}%>
                    <li>
                        <a href="/brand?page=<%= currentPage + 1>totalPage ? totalPage:currentPage + 1 %>&pageSize=<%= pageSize %>" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
    <%- include('./commen/foot') %>
    <script src="/js/jquery.js"></script>
    <script src="/js/brand.js"></script>
</body>

</html>