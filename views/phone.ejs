<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link rel="stylesheet" href="/css/commen.css">
    <link rel="stylesheet" href="/css/project.css">
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
</head>

<body>
    <%- include('./commen/head') %>
    <div class="menu">
        <%- include('./commen/menu') %>
        <div class="menu-right">
            <div class="cicleHead">
                <div class="cicle menu-form">
                    新增手机
                </div>
            </div>
            <table class="table table-striped table-bordered table-hover menu-table">
                <thead>
                    <tr>
                        <th>序号</th>
                        <th>图片</th>
                        <th>手机名称</th>
                        <th>所属品牌</th>
                        <th>官方指导价</th>
                        <th>二手回收价</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody class="tbodyAdd">
                    <% for(var i = 0; i < list.length; i++) {%>
                        <tr>
                                <th scope="row"><%= i+1 %></th>
                                <td>
                                    <img class="likeSmall" src="/<%= list[i].fileName %>" alt="">
                                    <!-- <span><%= list[i].phoneName %></span> -->
                                </td>
                                <td><%= list[i].username %></td>
                                <td><%= list[i].logo %></td>
                                <td><%= list[i].price %></td>
                                <td><%= list[i].recycle %></td>
                                <td>
                                    <a href="#" class="cicle">修改</a>
                                    <a class="cicle" href="/phone/delet?id=<%= list[i]._id %>">删除</a>
                                </td>
                        </tr>
                    <%}%>
                </tbody>
            </table>
            <form class="addList" method="post" action="/phone/phoneAdd" enctype="multipart/form-data">
                <h1>新增</h1>
                <label>
                    图片: <input type="file" name="file" id="img">
                          <!-- <input type="text" name="phoneName"> -->
                </label>
                <label>
                    手机名称: <input type="text" id="phone" name="usm">
                </label>
                <label>
                    所属品牌: <input type="text" id="logo" name="logo">
                </label>
                <label>
                    官方指导价: <input type="text" id="price" name="price">
                </label>
                <label>
                    二手回收价: <input type="text" id="recycle" name="recycle">
                </label>
                <label>
                    <button class="addNew">添加</button>
                    
                </label>
                <a class="cancel cicle">取消</a>
             </form>
            <!-- <nav class="menu-nav">
                <ul class="pagination menunav-li">
                    <li>
                        <a href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <li class="active"><a href="#">1</a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">4</a></li>
                    <li><a href="#">5</a></li>
                    <li>
                        <a href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav> -->
                <nav class="menu-nav">
                    <ul class="pagination menunav-li">
                        <li>
                            <a href="/phone?page=<%= currentPage - 1 < 1 ? 1: currentPage - 1 %>&pageSize=<%= pageSize %>" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        <% for (var i=0;i<totalPage;i++) {%>
                            <li class="<%= currentPage === (i+1) ? 'active': '' %>"><a href="/phone?page=<%= i+1 %>&pageSize=<%= pageSize %>"><%= i + 1%></a></li>
                        <%}%>
                        <li>
                            <a href="/phone?page=<%= currentPage + 1>totalPage ? totalPage:currentPage + 1 %>&pageSize=<%= pageSize %>" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
        </div>
    </div>
    <%- include('./commen/foot') %>

    <script src="/js/jquery.js"></script>
    <script src="/js/phone.js"></script>
</body>

</html>